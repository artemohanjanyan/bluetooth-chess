<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itmo.courseproject">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="itmo.courseproject.LocalGameActivity"/>

        <activity
            android:name="itmo.courseproject.MainActivity"
            android:label="@string/chat_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="itmo.courseproject.DeviceChooser" />

        <service android:name="itmo.courseproject.BluetoothService" />

        <activity android:name="itmo.courseproject.BtGameActivity"/>

        <activity android:name="itmo.courseproject.MenuActivity"
            android:label="@string/menu_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="itmo.courseproject.TmpActivity"/>
    </application>

</manifest>
